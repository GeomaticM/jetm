<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
  >

  <bean id="orderAgent"
        class="etm.tutorial.fiveminute.server.OrderAgentImpl"
        autowire="constructor">

  </bean>

  <bean id="orderAgentDao" class="etm.tutorial.fiveminute.server.dao.OrderAgentDaoImpl"
        autowire="constructor"/>

  <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
    <property name="service" ref="orderAgent"/>
    <property name="serviceInterface" value="etm.tutorial.fiveminute.server.OrderAgent"/>
    <property name="serviceName" value="OrderAgent"/>
    <property name="registryPort" value="1199"/>
  </bean>


